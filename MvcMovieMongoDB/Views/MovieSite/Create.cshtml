@using Microsoft.AspNetCore.Mvc.Rendering
@using MvcMovieMongoDB.Models
@model MvcMovieMongoDB.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<h2>Add a Movie to your Collection</h2>
<br/>

<div>
    <a href="@Url.Action("", "MovieSite")" class="btn btn-info")">
        <span class="glyphicon glyphicon-menu-left"></span>
        Back to Collectionaaaa
    </a>
</div>

<br/>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="col-sm-12 col-md-8 col-md-offset-2">
           <div class="form-horizontal" style="background-color:#9cf6fc; max-width:400px">
               <div class="blueBorder">
                   <div class="form-group">
                       <label asp-for="Title" class="col-sm-2 control-label"></label>
                       <div class="col-sm-8">
                           <input asp-for="Title" class="form-control" />
                           <span asp-validation-for="Title" class="text-danger"></span>
                       </div>
                   </div>
                   <div class="form-group">
                       <label asp-for="ReleaseDate" class="col-sm-2 control-label"></label>
                       <div class="col-sm-8">
                           <input asp-for="ReleaseDate" class="form-control" />
                           <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                       </div>
                   </div>
                   <div class="form-group">
                       <label asp-for="Genre" class="col-sm-2 control-label"></label>
                       <div class="col-sm-8">
                           @Html.DropDownListFor(m => m.Genre,
                    new SelectList(Model.Genres, "Value", "Text"), "Select", new { @class = "form-control" })
                           <span asp-validation-for="Genre" class="text-danger"></span>
                       </div>
                   </div>
                   <div class="form-group">
                       <label asp-for="Price" class="col-sm-2 control-label"></label>
                       <div class="col-sm-8">
                           <input asp-for="Price" class="form-control" />
                           <span asp-validation-for="Price" class="text-danger"></span>
                       </div>
                   </div>
                   <div class="form-group">
                       <label asp-for="Rating" class="col-sm-2 control-label"></label>
                       <div class="col-sm-8">
                           @Html.DropDownListFor(m => m.Rating,
                    new SelectList(Model.Ratings, "Value", "Text"), "Select", new { @class = "form-control" })
                           <span asp-validation-for="Rating" class="text-danger"></span>
                       </div>
                   </div>
                   <div class="form-group">
                       <div class="col-md-offset-2 col-sm-8">
                           <button type="submit" class="btn btn-success">
                               Save
                               <span class="glyphicon glyphicon-save"></span>
                           </button>
                       </div>
                   </div>
               </div>
        </div>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
